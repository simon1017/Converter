
<PDFToWavConverter>:
    canvas.before:
        Color:
            rgba: (float(48/255), float(158/255), float(242/255), 1)  # Adjust the RGBA values for the desired color
        Rectangle:
            pos: self.pos
            size: self.size

    pdf_path_input:pdf_path_input
    #save_path_input:save_path_input
    wav_name_input:wav_name_input
    page_start_input:page_start_input
    page_end_input:page_end_input

    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows: 4
            size: root.width, root.height
            GridLayout:
                cols: 3
                Label: 
                    text: "PDF path"
                TextInput:
                    id: pdf_path_input
                    multiline:False
                    hint_text: "enter path to PDF"
                Button:
                    text: "Select PDF"
                    on_press: root.select_pdf_path()
                    background_color: (float(12/255), float(105/255), float(199/255), 1)
                    color: (1, 1, 1, 1)  # White font color
                    font_size: 30
                    
                
                Label: 
                    text: "WAV filename"
                TextInput:
                    id: wav_name_input
                    multiline:False
                    hint_text: "enter WAV filename"
        GridLayout:
            cols: 4
            Label:
                text: "Start page"
            TextInput:
                id: page_start_input
                multiline: False
                hint_text: "0"
            Label:
                text: "End page"
            TextInput:
                id: page_end_input
                multiline: False
                hint_text: "0"
        #GridLayout:
            #cols: 3
            #Label:
            #    text: "enter save path"
            #TextInput:
            #    id: save_path_input
            #    hint_text: "enter save path"
            #Button:
            #    text: "Select save path"
            #    on_press: root.select_save_path()
            #    background_color: (float(12/255), float(105/255), float(199/255), 1)
            #    color: (1, 1, 1, 1)  # White font color
            #    font_size: 30
        Button:
            text: "Convert"
            on_press: root.convert_pdf_to_wav()
            background_color: (float(12/255), float(105/255), float(199/255), 1)
            color: (1, 1, 1, 1)  # White font color
            font_size: 30
